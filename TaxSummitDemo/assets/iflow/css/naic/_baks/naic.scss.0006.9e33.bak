// Gives an element its natural width/height without being visible
.invisible {
    visibility: hidden;
    position: absolute;
    display: block;
}

.rBtnWrapper input {
    position: absolute;
    top: 0.7em;
    left: 0.5em;
}

.visibleLabel {
    margin-left: 1.5em;
}

